{
  "expo": {
    "name": "visual",
    "slug": "visual",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "visual",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Permite el acceso a la c谩mara para la detecci贸n en tiempo real de muros y personas.",
        "NSMicrophoneUsageDescription": "Permite el acceso al micr贸fono si planeas grabar video con audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      //  PLUGIN DE CMARA AADIDO AQU 
      [
        "expo-camera",
        {
          "cameraPermissionText": "Permite el acceso a la c谩mara para la detecci贸n en tiempo real de muros y personas.",
          "microphonePermissionText": "Permite el acceso al micr贸fono si planeas grabar video con audio."
        }
      ],
      // ------------------------------------
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}